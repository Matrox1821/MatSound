---
import { Image } from "astro:assets" 
import { IoPlay } from "react-icons/io5";

interface Props{
  title?:string
  artist?:string
  image:ImageMetadata
  song?:string
  id:string
  transition?:"to-page"
}
const { title,artist,image,song,id,transition } = Astro.props;
---
<li class="flex-[0_0_10rem] w-96 rounded-lg color-[rgba(var(--content),1)] duration-150 gap-2"  transition:name={id+"-to-background"}>
    <a class="flex flex-col rounded-lg color-[rgba(var(--content),1)] duration-150 gap-2" href={`/track/${id}`}>
      <Image src={image} alt="yoasobi song" class="object-fill aspect-square w-full rounded-md" transition:name={`${id}${transition?"-"+transition:""}`}/>
      <h2 class="font-normal text-xl m-0 leading-5" transition:name={id+"-to-title"}>
        {title?title:"Undead"}
      </h2>
      <span class="text-xs font-medium opacity-70" transition:name={id+"-to-artist"}>
        {artist?artist:"YOASOBI"}
      </span>
    </a>
  </li>
  
<style>
  @media (hover:hover){
    li:hover{
    background-color: rgba(var(--bg-contrast),.4);
    } 
  }
</style>