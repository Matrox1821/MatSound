---
import { Image } from "astro:assets" 
import { IoPlay } from "react-icons/io5";

interface Props{
  title?:string
  artist?:string
  image:ImageMetadata
  song?:string
  id:string
  transition?:"to-page"
}
const { title,artist,image,song,id,transition } = Astro.props;
---
<li class="w-full h-12">
    <button class="flex gap-2">
      <Image src={image} alt="yoasobi song" class="object-fill aspect-square w-12 rounded-sm" transition:name={`${id}${transition?"-"+transition:""}`}/>
      <div class="flex flex-col items-start">
        <h2 class="font-normal text-xl m-0 leading-5 ">
          {title?title:"Undead"}
        </h2>
        <span class="text-xs font-medium opacity-70">
          {artist?artist:"YOASOBI"}
        </span>
      </div>
    </button>
  </li>

<style>
  @media (hover:hover){
    li:hover{
    background-color: rgba(var(--bg-contrast),.4);
    } 
  }
</style>
